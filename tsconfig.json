{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "pretty": true,
    "stripInternal": true,
    "noEmitHelpers": true,
    "outDir": "ts-out",
    "lib": ["dom", "es6", "es2015", "es2016", "es2017"]
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}